---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import About from '~/components/widgets/About.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Partners from '~/components/widgets/Partners.astro';
import Team from '~/components/widgets/Team.astro';
import Map from '~/components/widgets/Map.astro';
import Why from '~/components/widgets/Why.astro';
import Heroforest from '~/components/widgets/Hero-forest.astro';
import Valeurs from '~/components/widgets/Values.astro';
import Features from '~/components/widgets/Features.astro';
import Founders from '~/components/widgets/Founders.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero2 />
	<Note />
	<About />
	<Founders />
	<Valeurs />
	<Map />
	<Why />
	<Heroforest />
	<Team />
	<Partners />
</Layout>
